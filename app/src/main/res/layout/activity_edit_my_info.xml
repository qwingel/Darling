<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="554"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="45">
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="464"
            android:orientation="vertical"
            android:weightSum="1054">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="25">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"
                android:orientation="horizontal"
                android:weightSum="464">
                <Button
                    android:id="@+id/btn_backToMain"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:background="@drawable/arrow_left">
                </Button>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="384"
                    android:text="Измените данные профиля"
                    android:textSize="14sp"
                    android:textColor="@color/white_font"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_regular">
                </TextView>
                <Button
                    android:id="@+id/btn_confirmNewInfo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:background="@drawable/checkmark">
                </Button>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="41"
                android:text="Введите новую почту"
                android:textSize="11sp"
                android:textColor="@color/hint_font"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:fontFamily="@font/montserrat_regular">
            </TextView>
            <EditText
                android:id="@+id/et_newEmail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="45"
                android:hint=""
                android:textColorHint="@color/white_font"
                android:textSize="16sp"
                android:textColor="@color/white_font"
                android:fontFamily="@font/montserrat_regular"
                android:paddingStart="10dp"
                android:background="@drawable/edittext_backgroudd_sup">
            </EditText>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30">
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="41"
                android:text="Введите новое публичное имя"
                android:textSize="11sp"
                android:textColor="@color/hint_font"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:fontFamily="@font/montserrat_regular">
            </TextView>
            <EditText
                android:id="@+id/et_newName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="45"
                android:textSize="16sp"
                android:hint=""
                android:textColorHint="@color/white_font"
                android:textColor="@color/white_font"
                android:fontFamily="@font/montserrat_regular"
                android:paddingStart="10dp"
                android:background="@drawable/edittext_backgroudd_sup">
            </EditText>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30">
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="41"
                android:text="Введите новое имя пользователя"
                android:textSize="11sp"
                android:textColor="@color/hint_font"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:fontFamily="@font/montserrat_regular">
            </TextView>
            <EditText
                android:id="@+id/et_newUsername"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="45"
                android:textSize="16sp"
                android:hint=""
                android:textColorHint="@color/white_font"
                android:textColor="@color/white_font"
                android:fontFamily="@font/montserrat_regular"
                android:paddingStart="10dp"
                android:background="@drawable/edittext_backgroudd_sup">
            </EditText>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30">
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="41"
                android:text="Введите информацию о себе"
                android:textSize="11sp"
                android:textColor="@color/hint_font"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:fontFamily="@font/montserrat_regular">
            </TextView>
            <EditText
                android:id="@+id/et_newDescripton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="95"
                android:textSize="16sp"
                android:hint=""
                android:textColorHint="@color/white_font"
                android:textColor="@color/white_font"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="text|textMultiLine"
                android:maxLength="40"
                android:maxLines="4"
                android:paddingStart="10dp"
                android:background="@drawable/edittext_backgroudd_sup">
            </EditText>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="505">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="45">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>